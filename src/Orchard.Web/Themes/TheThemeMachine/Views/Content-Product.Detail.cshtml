@using Orchard.Utility.Extensions;
@using Contrib.Taxonomies.Models
@using Orchard.ContentManagement.Utilities
@{
    if (Model.Title != null) {
        Layout.Title = Model.Title;
    }
    
    var contentTypeClassName = ((string)Model.ContentItem.ContentType).HtmlClassify();

	var prodFields = Model.ContentItem.Product.ProductBase;

	var vendor = prodFields.Vendor.Terms as LazyField<IEnumerable<TermPart>>;
	var vendorName = vendor.Value.First().Name;

	var countryName = (prodFields.Country.Terms as LazyField<IEnumerable<TermPart>>).Value.First().Name;	
}



<article class="content-item @contentTypeClassName">
	
	<div class="topOfProduct">
		
		<div class="leftOftopOfProduct">
			<div>leftOftopOfProduct</div>
			<div class="Prod_MiddleName">@Display(prodFields.MiddleName.Value)</div>
			<div class="Prod_Picture_mid">@Display(Model.zone_Picture_mid)</div>
			<a class="Increase" href="#">Увеличить</a>
			<div class="Price">
				<span class="PriceLabel">Цена:</span>
				<span class="PriceDigits">@Display(prodFields.Price.Value)</span><span class="PriceDot">.-</span><span class="PriceCurrency"> Грн.</span>
			</div>
			<input class="addtocart_button" type="submit" title="Купить" value="Купить" />
		</div>
		

		<div class="rightOftopOfProduct">
			<div>rightOftopOfProduct</div>
			
			<div class="ProdProperties">
				<div class="Vendor">@Display(vendorName) (<span class="Country">@Display(countryName)</span>)</div>
				
				@if (prodFields.Obezzhelezivanie.Value == "Да")
	{
					<div class="Obezzhelezivanie" > Обезжеленивание: @Display(prodFields.Obezzhelezivanie.Value)</div>
	}
	@*
				<div class="StepsFiltering">Ступеней фильтрации: @Display(prodFields.StepsFiltering.Value)</div>*@
			</div>

		</div>	
		
		
		
		
		
		
		
		
		
		

	</div>
	
	
	
	
	
	
	
	
	
	
	@*
	

	<div class="middleOfProduct">
		middleOfProduct
	</div>
	
	<div class="bottomOfProduct">
		bottomOfProduct
	</div>
	
	
	*@
	
	


	@*<header>
		
		@Display(Model.Header)

		@if (Model.Meta != null) {
			<div class="metadata">
				@Display(Model.Meta)
			</div>
		}
	</header>
	
	

	@Display(Model.Content)
	
	

	@if(Model.Footer != null) {
	 	 
		<footer>
			@Display(Model.Footer)
		</footer>
	 
	 
    }*@
</article>

<div class="oldContent">@Display(Model.Content)</div>
